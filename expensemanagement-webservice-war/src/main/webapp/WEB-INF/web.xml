<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Expense Management</display-name>
  <!--  filter>
		<filter-name>HibernateFilter</filter-name>
	    <filter-class>biz.fz5.expensemanagement.filter.HibernateFilter</filter-class>
  </filter>
  <filter-mapping>
    	<filter-name>HibernateFilter</filter-name>
    	<url-pattern>/rest/*</url-pattern>
  </filter-mapping-->
  <listener>
    <listener-class>
      biz.fz5.expensemanagement.service.ApiKeyInitializer
    </listener-class>
  </listener>	
  <listener>
    <listener-class>
      org.springframework.web.context.ContextLoaderListener
    </listener-class>
  </listener>
  <servlet>
    <servlet-name>Jersey REST Service</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>biz.fz5.expensemanagement.service</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Jersey REST Service</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GCMRegister</servlet-name>
    <servlet-class>
      biz.fz5.expensemanagement.service.GCMRegister
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>GCMRegister</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GCMUnregister</servlet-name>
    <servlet-class>
      biz.fz5.expensemanagement.service.GCMUnregister
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>GCMUnregister</servlet-name>
    <url-pattern>/unregister</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GCMHome</servlet-name>
    <servlet-class>
      biz.fz5.expensemanagement.service.GCMHome
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>GCMHome</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GCMSendMessages</servlet-name>
    <servlet-class>
      biz.fz5.expensemanagement.service.GCMSendMessages
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>GCMSendMessages</servlet-name>
    <url-pattern>/sendAll</url-pattern>
  </servlet-mapping>
</web-app>